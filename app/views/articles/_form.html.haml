= form_for(@article) do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= pluralize(@article.errors.count, "error")
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_area :title
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .actions
    = f.submit
