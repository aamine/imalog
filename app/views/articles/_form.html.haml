= form_for(@article) do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= pluralize(@article.errors.count, "error")
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title, "タイトル"
    %br/
    = f.text_area :title, size: "50x1"
  .field
    = f.text_area :body, size: "60x25"
  .actions
    = f.submit '投稿'
